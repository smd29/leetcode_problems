class Solution:
    def getSum(self, a: int, b: int) -> int:
        num = (a**2)+(b**2)+(2*a*b)
        Neg = False
        if a < 0 and b < 0:
            Neg = True
        elif a < 0:
            if abs(a) > b:
                Neg = True
        elif b < 0:
            if abs(b) > a:
                Neg = True
        def sqrt(n):
            if n > 1:
                low = 0
                high = n//2
                ans = 0
                while low <= high:
                    mid = (low+high)//2
                    if mid*mid == n:
                        return mid
                    if mid*mid > n:
                        high = mid - 1
                    else:
                        low = mid + 1
            else:
                return n
        return -sqrt(num) if Neg else sqrt(num)
