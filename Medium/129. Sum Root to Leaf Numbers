# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def sumNumbers(self, root: Optional[TreeNode]) -> int:
        if not root:
            return 0
        
        def dfs(node,curr):
            nonlocal res
            if node:
                curr = curr * 10 + node.val
                if not(node.left or node.right):
                    res += curr 
                dfs(node.left,curr)
                dfs(node.right,curr)
                
        res = 0
        dfs(root,curr = 0)
        return res
