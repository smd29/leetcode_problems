class Solution:
    def sortColors(self, nums: List[int]) -> None:
        """
        Do not return anything, modify nums in-place instead.
        """
        def mergeSort(nums):
            
            if len(nums)>1:
                mid = len(nums)//2
                left = nums[:mid]
                right = nums[mid:]
                mergeSort(left)
                mergeSort(right)
                i = j = temp = 0
                while i < len(left) and j <len(right):
                    if left[i] < right[j]:
                        nums[temp] = left[i]
                        i += 1
                    else:
                        nums[temp] = right[j]
                        j += 1
                    temp += 1
                while i <len(left):
                    nums[temp] = left[i]
                    temp += 1
                    i += 1
                while j <len(right):
                    nums[temp] = right[j]
                    temp += 1
                    j += 1
        mergeSort(nums)
