class Solution:
    def strStr(self, haystack: str, needle: str) -> int:
        n = len(needle)
        h = len(haystack)
        if n == 0:
            return 0
        if n > h:
            return -1
        for i in range(h):
            if haystack[i:i+n] == needle:
                return i
        return -1
